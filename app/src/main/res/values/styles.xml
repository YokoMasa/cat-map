<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginEditText">
        <item name="android:layout_width">@dimen/login_edit_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/login_edit_text_text_size</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="LoginButton">
        <item name="android:layout_width">@dimen/login_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/login_button_text_size</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@drawable/login_button_background</item>
    </style>

    <style name="SnsLoginButton">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Loading">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/loading</item>
    </style>



</resources>
